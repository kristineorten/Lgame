<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SettingsActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <RadioButton
            android:id="@+id/lightMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="changeColorMode"
            android:text="@string/lightMode"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/darkGrey" />

        <RadioButton
            android:id="@+id/darkMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="changeColorMode"
            android:text="@string/darkMode"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/darkGrey" />
    </RadioGroup>

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/Settings"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/darkGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backArrow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:onClick="goToMain"
        app:layout_constraintBottom_toBottomOf="@+id/settingsTitle"
        app:layout_constraintEnd_toStartOf="@+id/settingsTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settingsTitle"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnPurple1"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/purple"
                android:onClick="changeColorL1"
                android:text="@string/square_value"
                android:textColor="@color/purple" />

            <Button
                android:id="@+id/btnRed1"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/red"
                android:onClick="changeColorL1"
                android:text="@string/square_value"
                android:textColor="@color/red" />

            <Button
                android:id="@+id/btnOrange1"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/orange"
                android:onClick="changeColorL1"
                android:text="@string/square_value"
                android:textColor="@color/orange" />

            <Button
                android:id="@+id/btnYellow1"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/yellow"
                android:onClick="changeColorL1"
                android:text="@string/square_value"
                android:textColor="@color/yellow" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="16dp">

            <Button
                android:id="@+id/btnBlue1"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/blue"
                android:onClick="changeColorL1"
                android:text="@string/square_value"
                android:textColor="@color/blue" />

            <Button
                android:id="@+id/btnAqua1"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/aqua"
                android:onClick="changeColorL1"
                android:text="@string/square_value"
                android:textColor="@color/aqua" />

            <Button
                android:id="@+id/btnLightGreen1"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/lightGreen"
                android:onClick="changeColorL1"
                android:text="@string/square_value"
                android:textColor="@color/lightGreen" />

            <Button
                android:id="@+id/btnGreen1"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/green"
                android:onClick="changeColorL1"
                android:text="@string/square_value"
                android:textColor="@color/green" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnPurple2"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/purple"
                android:onClick="changeColorL2"
                android:text="@string/square_value"
                android:textColor="@color/purple" />

            <Button
                android:id="@+id/btnRed2"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/red"
                android:onClick="changeColorL2"
                android:text="@string/square_value"
                android:textColor="@color/red" />

            <Button
                android:id="@+id/btnOrange2"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/orange"
                android:onClick="changeColorL2"
                android:text="@string/square_value"
                android:textColor="@color/orange" />

            <Button
                android:id="@+id/btnYellow2"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/yellow"
                android:onClick="changeColorL2"
                android:text="@string/square_value"
                android:textColor="@color/yellow" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="16dp">

            <Button
                android:id="@+id/btnBlue2"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/blue"
                android:onClick="changeColorL2"
                android:text="@string/square_value"
                android:textColor="@color/blue" />

            <Button
                android:id="@+id/btnAqua2"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/aqua"
                android:onClick="changeColorL2"
                android:text="@string/square_value"
                android:textColor="@color/aqua" />

            <Button
                android:id="@+id/btnLightGreen2"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/lightGreen"
                android:onClick="changeColorL2"
                android:text="@string/square_value"
                android:textColor="@color/lightGreen" />

            <Button
                android:id="@+id/btnGreen2"
                android:layout_width="@dimen/colorBtnSize"
                android:layout_height="@dimen/colorBtnSize"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/color_btn"
                android:backgroundTint="@color/green"
                android:onClick="changeColorL2"
                android:text="@string/square_value"
                android:textColor="@color/green" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/Player2_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/colorMode"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsTitle" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/Player1_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>